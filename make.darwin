include env.tmp
CFLAGS = -fPIC -std=c99 -D_GNU_SOURCE -pedantic-errors -Wall -Wextra -I$(ERTS_HOME)/include
LFLAGS = -shared -dynamiclib -undefined dynamic_lookup
UNAME := $(shell uname)
SRCDIR   = src
OBJDIR   = obj/darwin
PRVDIR	 = priv

TARGET	= priv/sniff_darwin.so
SOURCES = src/sniff_darwin.c src/sniff_posix.c src/sniff.c

OBJECTS := $(SOURCES:$(SRCDIR)/%.c=$(OBJDIR)/%.o)

.PHONY: all clean

all: $(TARGET)

$(OBJECTS): $(OBJDIR)/%.o : $(SRCDIR)/%.c $(HEADERS)
	mkdir -p $(OBJDIR)
	$(CC) $(CFLAGS) -o $@ -c $<

$(TARGET): $(OBJECTS)
	mkdir -p $(PRVDIR)
	$(CC) $(LFLAGS) -o $@ $^

clean:
	rm -fr $(OBJDIR)
	rm -f $(TARGET)
